{
  "schemaVersion": 1,
  "id": "modid",
  "version": "${version}",

  "name": "HashiCraft Bot",
  "description": "Serverside mod for interacting with the HashiCraft Bot.",
  "authors": [
    "Nic Jackson",
    "Erik Veld"
  ],
  "contact": {
    "homepage": "https://hashicraft.com/",
    "sources": "https://github.com/hashicraft/minecraft-fabric-mod-hashicraft-bot"
  },

  "license": "CC0-1.0",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.hashicraft.bot.BotMod"
    ]
  },
  "mixins": [
    "modid.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16"
  },

 "suggests": {
    "another-mod": "*"
  }
}
